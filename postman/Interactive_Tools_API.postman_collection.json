{
	"info": {
		"_postman_id": "interactive-tools-api",
		"name": "Interactive Tools API",
		"description": "API for managing interactive tools (colored cards and timeline)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Academy Tools Management",
			"item": [
				{
					"name": "Get Tool Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{academy_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/interactive_tools/tools/{{tool_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"interactive_tools",
								"tools",
								"{{tool_id}}"
							]
						},
						"description": "Get details of a specific interactive tool"
					},
					"response": []
				},
				{
					"name": "Update Tool",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{academy_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated Tool Title\",\n  \"description\": \"Updated tool description\",\n  \"tool_type\": \"colored_card\",\n  \"color\": \"#ff6b6b\",\n  \"image\": \"https://example.com/image.jpg\",\n  \"order_number\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/interactive_tools/tools/{{tool_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"interactive_tools",
								"tools",
								"{{tool_id}}"
							]
						},
						"description": "Update an interactive tool"
					},
					"response": []
				},
				{
					"name": "Delete Tool",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{academy_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/interactive_tools/tools/{{tool_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"interactive_tools",
								"tools",
								"{{tool_id}}"
							]
						},
						"description": "Delete an interactive tool"
					},
					"response": []
				}
			],
			"description": "Endpoints for academy users to manage interactive tools"
		},
